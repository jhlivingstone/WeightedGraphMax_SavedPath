<?xml version="1.0" encoding="UTF-8"?>

<!-- 
	 * These strings are used to specify the input and output files and directories
	 * Note that the output of iteration (i) is the input for iteration (i+1)
	 * For Local HDFS:
	 * 	inputPathFirstIteration =  "input/input-graph"
	 *  inputPathOtherIterations = "output/outgraph/output-graph-"
	 *  outputPathIteration =      "output/outgraph/output-graph-"
-->


<configuration>

<!-- Path and filename of initial input graph -->
<property>
<name>inputPathFirstIteration</name>
<value>input/input-graph</value>
</property>

<!-- Path and partial filename of subsequent input graph (input for all other iterations) -->
<property>
<name>inputPathOtherIterations</name>
<value>output/outgraph/output-graph-</value>
</property>

<!-- Path and partial filename of output graph  -->
<property>
<name>outputPathIteration</name>
<value>output/outgraph/output-graph-</value>
</property>

</configuration>

